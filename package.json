{
  "name": "bakery-workspace",
  "version": "1.0.50",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter=api dev",
    "dev:web": "bun run --filter=web dev",
    "dev:all": "bun run --parallel dev dev:web",
    "test": "bun test",
    "test:integration": "bun test",
    "commit": "git-cz",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test:setup": "docker-compose up -d mongodb_test",
    "test:cleanup": "docker-compose down",
    "test:connection": "bun run --filter=api test:connection",
    "seed:api": "bun run packages/api/src/scripts/seed.ts"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
